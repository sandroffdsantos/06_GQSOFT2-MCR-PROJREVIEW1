{
  "trailingComma": "none",
  "semi": true,
  "singleQuote": false,
  "printWidth": 80,
  "requirePragma": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "semi": false,
        "tabWidth": 2
      }
    },
    {
      "files": [
        "src/*.ts",
        "*src/*.tsx"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
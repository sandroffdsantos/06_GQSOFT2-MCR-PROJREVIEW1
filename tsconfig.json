{
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": true,
    "module": "CommonJS"
  },
  "typedocOptions": {
    "entryPoints": ["./src/**/*"],
     "out": "./Typedoc",
     "theme": "default",
     "exclude": "*.test.ts",
    },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.spec.js"]
}

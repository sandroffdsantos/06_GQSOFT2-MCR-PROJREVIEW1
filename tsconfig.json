{
    "compilerOptions": {
        "target": "ES2018",
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmitOnError": true,
        "module": "CommonJS"
    },
       "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.js"
      ],
      "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.spec.js"
      ],
      "typedocOptions": {
        "entryPoints": [
          // Original Entry Point
          "./src/**",
          // Additional Entry Point
          "./public/**/*"
        ],
        //"exclude": "**/*.test.ts",
        "theme": "default",
        "out": "./TypeDoc"
      },
}